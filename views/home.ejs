<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="theme-color" content="#0f172a" />
        <title>Home â€“ URL Shortener</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-indigo-900 p-6">
        <div class="max-w-5xl mx-auto">
            <!-- Header -->
            <header class="mb-8">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl md:text-4xl font-semibold tracking-tight text-white">URL Shortener</h1>
                        <p class="text-slate-300 mt-1">Transform long URLs into short, shareable links</p>
                    </div>
                    <% if (locals.user) { %>
                        <div class="flex items-center gap-3">
                            <span class="text-slate-300 text-sm">Welcome, <strong><%= user.name %></strong></span>
                            <a href="/health" target="_blank" class="px-4 py-2 rounded-lg bg-emerald-500/20 border border-emerald-500/30 hover:bg-emerald-500/30 text-emerald-200 transition text-sm">
                                Health Check
                            </a>
                            <form action="/user/logout" method="POST" class="inline">
                                <button type="submit" class="px-4 py-2 rounded-lg bg-red-500/20 border border-red-500/30 hover:bg-red-500/30 text-red-200 transition text-sm">
                                    Logout
                                </button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </header>

            <!-- Success Message -->
            <% if (locals.id) { %>
                <div class="mb-6 rounded-lg bg-emerald-500/15 border border-emerald-500/30 p-4 text-emerald-200">
                    <div class="flex items-start gap-3">
                        <svg class="h-5 w-5 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <div>
                            <p class="text-sm font-medium">URL generated successfully</p>
                            <div class="mt-1 text-sm">
                                <span class="text-slate-300">Short URL:</span>
                                <a id="generatedShort" href="/<%= id %>" class="text-indigo-300 hover:text-indigo-200 underline underline-offset-4" target="_blank">/<%= id %></a>
                                <button type="button" class="ml-2 inline-flex items-center text-xs px-2 py-1 rounded-md bg-white/10 border border-white/20 hover:bg-white/15 text-slate-200" onclick="copyText(window.location.origin + '/<%= id %>')">Copy</button>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- URL Form -->
            <section class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl shadow-2xl p-6 md:p-8 text-white mb-8">
                <form method="POST" action="/url" class="space-y-5">
                    <div>
                        <label for="url" class="block text-sm mb-2 text-slate-200">Enter your original URL</label>
                        <input
                            type="url"
                            id="url"
                            name="url"
                            placeholder="https://example.com/very-long-url"
                            required
                            class="w-full rounded-lg bg-white/10 border border-white/20 text-white placeholder-slate-400 px-4 py-2.5 outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 transition"
                        />
                    </div>
                    <button
                        type="submit"
                        class="w-full inline-flex justify-center items-center rounded-lg bg-indigo-500 hover:bg-indigo-400 active:bg-indigo-600 disabled:opacity-60 text-white font-medium px-4 py-2.5 shadow-lg shadow-indigo-900/30 transition"
                    >
                        Generate Short URL
                    </button>
                </form>
            </section>

            <!-- URL Table -->
            <% if (locals.urls && urls.length > 0) { %>
                <section class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl shadow-2xl overflow-hidden text-white">
                    <div class="px-6 py-4 bg-white/5 border-b border-white/10">
                        <h2 class="text-lg font-medium">Your Shortened URLs</h2>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-white/5 text-slate-200">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider">S.No</th>
                                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider">Short ID</th>
                                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider">Redirect URL</th>
                                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider">Clicks</th>
                                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider">Created At</th>
                                    <% if (locals.user && user.role === 'Admin') { %>
                                        <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider">Created by</th>
                                    <% } %>
                                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-white/10">
                                <% urls.forEach((url, index) => { %>
                                    <tr class="hover:bg-white/5 transition">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-200"><%= index + 1 %></td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            <div class="flex items-center gap-2">
                                                <a href="/<%= url.shortId %>" class="font-mono text-indigo-300 hover:text-indigo-200 underline underline-offset-4" target="_blank">/<%= url.shortId %></a>
                                                <button type="button" class="text-xs px-2 py-1 rounded-md bg-white/10 border border-white/20 hover:bg-white/15 text-slate-200" onclick="copyText(window.location.origin + '/<%= url.shortId %>')">Copy</button>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-slate-200 max-w-xl truncate">
                                            <a href="<%= url.redirectUrl %>" class="hover:text-indigo-300 hover:underline" target="_blank"><%= url.redirectUrl %></a>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-200">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-400/20 text-indigo-200">
                                                <%= url.visitHistory.length %> clicks
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-200"><%= url.createdAt.toLocaleString() %></td>   

                                        <% if (locals.user && user.role === 'Admin') { %>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-200"><%= url.createdBy ? url.createdBy.name : 'N/A' %></td>
                                        <% } %>

                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            <div class="flex items-center gap-2">
                                                <a href="/stats/<%= url.shortId %>" class="inline-flex items-center px-3 py-1.5 rounded-md bg-indigo-500/20 border border-indigo-500/30 hover:bg-indigo-500/30 text-indigo-200 transition text-xs">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                                                    </svg>
                                                    Stats
                                                </a>
                                                <button onclick="confirmDelete('<%= url.shortId %>')" class="inline-flex items-center px-3 py-1.5 rounded-md bg-red-500/20 border border-red-500/30 hover:bg-red-500/30 text-red-200 transition text-xs">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                    </svg>
                                                    Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </section>
            <% } %>

            <p class="mt-8 text-center text-xs text-slate-400">&copy; <%= new Date().getFullYear() %> URL Shortener</p>
        </div>

        <!-- Delete Confirmation Modal -->
        <div id="deleteModal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
            <div class="bg-slate-800 border border-white/20 rounded-2xl shadow-2xl max-w-md w-full p-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="flex-shrink-0 w-12 h-12 rounded-full bg-red-500/20 flex items-center justify-center">
                        <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-white">Delete URL</h3>
                        <p class="text-sm text-slate-400">This action cannot be undone</p>
                    </div>
                </div>
                <p class="text-slate-300 mb-6">Are you sure you want to delete this shortened URL? All analytics data will be permanently lost.</p>
                <div class="flex gap-3">
                    <button onclick="closeDeleteModal()" class="flex-1 px-4 py-2 rounded-lg bg-white/10 border border-white/20 hover:bg-white/15 text-white transition">
                        Cancel
                    </button>
                    <button onclick="deleteUrl()" class="flex-1 px-4 py-2 rounded-lg bg-red-500 hover:bg-red-600 text-white font-medium transition">
                        Delete
                    </button>
                </div>
            </div>
        </div>

        <script>
            let deleteShortId = null;

            function copyText(text) {
                if (!navigator.clipboard) {
                    const ta = document.createElement('textarea');
                    ta.value = text;
                    document.body.appendChild(ta);
                    ta.select();
                    try { document.execCommand('copy'); } finally { document.body.removeChild(ta); }
                    return;
                }
                navigator.clipboard.writeText(text);
            }

            function confirmDelete(shortId) {
                deleteShortId = shortId;
                document.getElementById('deleteModal').classList.remove('hidden');
            }

            function closeDeleteModal() {
                deleteShortId = null;
                document.getElementById('deleteModal').classList.add('hidden');
            }

            async function deleteUrl() {
                if (!deleteShortId) return;

                try {
                    const response = await fetch(`/url/${deleteShortId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const data = await response.json();

                    if (response.ok) {
                        // Reload the page to show updated list
                        window.location.reload();
                    } else {
                        alert(data.error || 'Failed to delete URL');
                        closeDeleteModal();
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the URL');
                    closeDeleteModal();
                }
            }

            // Close modal on escape key
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') closeDeleteModal();
            });

            // Close modal when clicking outside
            document.getElementById('deleteModal')?.addEventListener('click', (e) => {
                if (e.target.id === 'deleteModal') closeDeleteModal();
            });
        </script>
    </body>
    </html>